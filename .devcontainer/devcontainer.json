{
  "name": "PreTeXt-Full",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/pandoc:1": {}
  },
  // "forwardPorts": [
  // 	27377,
  // 	27378
  // ],
  // "portsAttributes": {
  // 	"27378": {
